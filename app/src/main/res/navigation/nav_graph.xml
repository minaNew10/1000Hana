<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.alfhana.ui.loginactivity.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <argument
            android:name="user"
            app:argType="com.example.alfhana.data.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_loginFragment_to_mobile_navigation"
            app:destination="@id/mobile_navigation" />
        <action
            android:id="@+id/action_loginFragment_to_mealsActivity"
            app:destination="@id/mealsActivity"
            app:popUpTo="@id/mealsActivity"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.alfhana.ui.loginactivity.SignUpFragment"
        android:label="sign_up_fragment"
        tools:layout="@layout/sign_up_fragment" >
        <action
            android:id="@+id/action_signUpFragment_to_mealsActivity"
            app:destination="@id/mealsActivity" />
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <activity
        android:id="@+id/mealsActivity"
        android:name="com.example.alfhana.ui.mealsactivity.MealsActivity"
        android:label="app_bar_meals"
        tools:layout="@layout/activity_meals" >
        <argument
            android:name="loggedin_user"
            app:argType="com.example.alfhana.data.model.User"
            app:nullable="true"
            android:defaultValue="@null" />
    </activity>

</navigation>